<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

    <TextView
        android:text="@string/team_a_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:textColor="#616161"
        android:id="@+id/lblTeamA"
        android:contentDescription="Team A" />

    <TextView
        android:id="@+id/team_a_score"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-light"
        android:textSize="56sp"
        android:textColor="#000000"
        android:contentDescription="Team A Score" />

    <Button
        android:text="+3 POINTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:onClick="addThreePointsA"
        android:id="@+id/btnTeamA3Pts"
        android:contentDescription="Team A 3 Points" />

    <Button
        android:text="+2 POINTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:onClick="addTwoPointsA"
        android:id="@+id/btnTeamA2Pts"
        android:contentDescription="Team A 2 Points" />

    <Button
        android:text="FREE THROW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:onClick="addOnePointA"
        android:id="@+id/btnTeamAFreeThrow"
        android:contentDescription="Team A Free Throw" />

    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray">

    </View>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:text="@string/team_b_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="#616161"
            android:contentDescription="Team B"
            android:id="@+id/lblTeamB" />

        <TextView
            android:id="@+id/team_b_score"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-light"
            android:textSize="56sp"
            android:textColor="#000000"
            android:contentDescription="Team B Score" />

        <Button
            android:text="+3 POINTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:onClick="addThreePointsB"
            android:id="@+id/btnTeamB3Pts"
            android:contentDescription="Team B 3 Points" />

        <Button
            android:text="+2 POINTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:onClick="addTwoPointsB"
            android:id="@+id/btnTeamB2Pts"
            android:contentDescription="Team B 2 Points" />

        <Button
            android:text="FREE THROW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="addOnePointB"
            android:id="@+id/btnTeamBFreeThrow"
            android:contentDescription="Team B Free Throw" />

    </LinearLayout>
    </LinearLayout>


    </LinearLayout>
    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="resetScores"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnReset"
        android:contentDescription="Reset Score" />

</RelativeLayout>
